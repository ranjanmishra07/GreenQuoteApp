{
  "name": "greenquote-server",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0 <21"
  },
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "test": "mocha"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "pg2": "^0.0.1",
    "sequelize": "^6.37.7",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.15",
    "@types/sinon-chai": "^3.2.9",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.2.1",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register",
      "./test/helpers/index.ts"
    ],
    "recursive": true,
    "full-trace": true,
    "spec": "test/**/*.spec.ts"
  }
}
